@model IEnumerable<E_Book_eproject.Models.OrderDetail>

@{
    ViewData["Title"] = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="confirmation_part section_padding">
     @foreach (var item in Model)
            {
    <div class="container">
        <div class="row">
          <div class="row">
                    <div class="col-lg-12">
                <div class="order_details_iner">
                    
                    <h3>Order Details</h3>
                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th scope="col" colspan="2">Product</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            <tr>
                                <th colspan="2"><span>
                                  @Html.DisplayFor(modelItem => item.ProductId)
                                </span>
                                </th>
                                <th> 
                                   0.@Html.DisplayFor(modelItem => item.Quantity)
                                </th>
                                <th> <span>
                                                @Html.DisplayFor(modelItem => item.UnitPrice)
                                    </span></th>
                            </tr>
                            
                            
                            <tr>
                                <th colspan="3">Subtotal</th>
                                        <th> <span>@Model.Sum(i => i.Quantity * i.UnitPrice)</span></th>
                            </tr>
                           
                        </tbody>
                        
                        <tfoot>
                            <tr>
                             <th>  <a class="btn_3" asp-action="index" asp-controller="Home">Back</a></th>    
                            </tr>
                               
                        </tfoot>
                    </table>
                    
                </div>
            </div>
        </div>
        
    </div>
   </div>
            }
</section>


