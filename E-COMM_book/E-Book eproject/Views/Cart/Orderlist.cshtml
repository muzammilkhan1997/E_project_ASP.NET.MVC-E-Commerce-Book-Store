@model IEnumerable<E_Book_eproject.Models.Order>

@{
    ViewData["Title"] = "Orderlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Hero Area Start-->
<div class="slider-area ">
    <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>Confirmation</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--================ confirmation part start =================-->
<section class="confirmation_part section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="confirmation_tittle">
                    <span>Thank you. Your order has been received.</span>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>order info</h4>
                        <ul>
                            <li>
                                <p>order number</p><span>: @Html.DisplayFor(modelItem => item.OrderNumber)</span>
                            </li>
                            <li>
                                <p>data</p><span>: @Html.DisplayFor(modelItem => item.OrderDate)</span>
                            </li>
                            <li>
                                <p>DeliveryDistance </p><span>: @Html.DisplayFor(modelItem => item.DeliveryDistance)</span>
                               
                            </li>
                            <p>total</p>
                            <span> : @Html.DisplayFor(modelItem => item.TotalAmount)</span>
                            <li>
                                
                            </li>
                            <li>
                                <p>Status </p><span>: @Html.DisplayFor(modelItem => item.Status)</span>
                            </li>
                            <li>
                                <p>mayment methord</p><span>: @Html.DisplayFor(modelItem => item.PaymentStatus)</span>
                            </li>
                            <li>
                               
                                    <a asp-action="OrderDetails" class="btn_3 justify-content" asp-controller="Cart" asp-route-id="@item.OrderId">Details</a>
                                
                            </li>
                        </ul>
                    </div>
                </div>
            }

        </div>
    </div>
    </div>
</section>
<!--================ confirmation part end =================-->
